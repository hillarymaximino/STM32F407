uint16_t senoide[100] = { 2730,2808,2886,2963,3040,3116,3190,3262,3331,3398, 3461,3520,3576,3627,3673,3714,3750,3781,3806,3825, 3838,3845,3846,3840,3828,3811,3787,3758,3723,3683, 3637,3586,3531,3471,3410,3345,3278,3209,3139,3068, 2997,2925,2855,2785,2716,2649,2584,2522,2463,2408, 2356,2308,2264,2224,2189,2158,2132,2111,2094,2083, 2076,2074,2077,2086,2099,2117,2141,2170,2204,2243, 2287,2336,2389,2446,2507,2572,2639,2709,2781,2855, 2930,3006,3082,3158,3233,3306,3378,3447,3513,3576, 3635,3690,3741,3786,3826,3860,3889,3912,3929,3940 }; int main(void) { Utility_Init(); // Clock + Timer2 (base 1us) DAC_Init(DAC_CHANNEL2); // PA5 é Canal 2 do DAC uint8_t i = 0; while(1) { DAC_SetValue(DAC_CHANNEL2, senoide[i], DAC_RES_12BITS); i++; if(i >= 100) i = 0; // volta ao início Delay_us(40); // 40 µs → 250 Hz } }
